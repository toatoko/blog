<div id="<%= dom_id post %>">
  
  <h2><%= post.title %></h2>
  <h4>Posted By <%= link_to post.user.full_name, user_path(post.user), class: 'text-reset-link'  %></h4>
  <h6><%= pluralize(post.views, "View") %></h6>  
  <h6>Category: <%= link_to "#{post.category&.name}", category_path(post.category),class: 'text-reset-link'  %></h6>
  <div>
    <%= post.body.to_s %>
  </div>
  
</div>
 
