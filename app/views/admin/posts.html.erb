<div class="container">
    <h1 class="text-center">Posts</h1>
    <%= render "admin/nav_links" %>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Post</th>
                <th scope="col">Author</th>
                <th scope="col">Comments</th>
                <th scope="col">Category</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.includes([:category]).each do |post|  %>
                <tr>
                    <th scope="row"> <%= post.id %></th>
                    <td><%= link_to post.title.truncate(15), admin_post_path(post) %></td>
                    <td><%= post.user.full_name %></td>
                    <td><%= pluralize(post.comments.size, "comment") %></td>
                    <td><%= link_to post.category.name, post.category %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>