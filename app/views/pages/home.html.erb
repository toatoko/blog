  
<div class="container card">
    <h1>My Personal Home Page</h1>
    <p>You can read more about me, or checkout my blog</p>
    <div class="card-action mb-3">
        <%= link_to "About me", about_path, class:"btn btn-search" %> 
        <%= link_to "Blog", posts_path, class:"btn btn-search " %> 
        <%= link_to "Buy my stuff", checkout_path(
            line_items: ["price_1Re8HhFMAnjHu1AwBMNXI7xV"],
            payment_mode: "payment"), class:"btn btn-search" %> 
        <%= link_to "Subscribe", checkout_path(
            line_items: ["price_1ReBAZFMAnjHu1AwfOMIWtUu"],
            payment_mode: "subscription"), class: "btn btn-search" %>
        <%= link_to "Manage Billing", @portal_session.url, class: "btn btn-search " unless @portal_session.nil? %>
    </div>
</div>
<% if current_user %>
    <div class="container card mt-4">
        <h2> User Info</h2>
        <h3> <%= current_user.full_name%></h3>
        <ul>
            <li><%= current_user.address.street.titleize %></li>
            <li><%= current_user.address.city.titleize %></li>
            <li><%= current_user.address.state.titleize %></li>
            <li><%= current_user.address.zip %></li>
            <li><%= current_user.address.country.titleize %></li>
        </ul>
    </div>
<% end %>    
<div class="container card mt-4">
    <legend> Categories </legend>
    <ul class='list-inline'>
        <% @categories.each do |category| %>
        <li class="list-inline-item me-3">
            <%= link_to category.name, category, class: "btn btn-search " %>
            <span class="badge bg-dark text-light rounded-pill"><%= category.posts_count || 0 %> Posts</span>
        </li>
        <% end %>
        <li class= "text-center">
            <%= link_to "All Categories", categories_path, class: "btn btn-search" %>
        </li>
    </ul>
</div>    
    