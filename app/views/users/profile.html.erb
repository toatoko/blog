
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --accent-color: #667eea;
            --text-primary: #2c3e50;
            --text-secondary: #6c757d;
            --bg-light: #f8f9fa;
            --shadow-light: 0 2px 8px rgba(0, 0, 0, 0.08);
            --shadow-medium: 0 4px 16px rgba(0, 0, 0, 0.12);
            --shadow-heavy: 0 10px 30px rgba(0, 0, 0, 0.15);
            --border-radius: 16px;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        * {
            box-sizing: border-box;
        }

        .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        background: transparent;
        }

        .main-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        .profile-card {
            background:transparent;
            backdrop-filter: blur(20px);
            border: none;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-heavy);
            overflow: hidden;
            position: relative;
        }

        .profile-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--primary-gradient);
            z-index: 1;
        }

        .card-header {
            background: var(--primary-gradient);
            padding: 3rem 2rem 2rem;
            position: relative;
            overflow: hidden;
            color: white;
            border: none;
        }

        .card-header::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><defs><pattern id='grain' width='100' height='100' patternUnits='userSpaceOnUse'><circle cx='25' cy='25' r='1.5' fill='white' opacity='0.1'/><circle cx='75' cy='75' r='1' fill='white' opacity='0.08'/><circle cx='50' cy='10' r='0.8' fill='white' opacity='0.12'/></pattern></defs><rect width='100' height='100' fill='url(%23grain)'/></svg>");
            pointer-events: none;
        }

        .card-header h1 {
            position: relative;
            z-index: 2;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
            font-weight: 800;
            margin: 0;
            font-size: 2.5rem;
            letter-spacing: -0.02em;
        }

        .card-body {
            padding: 2.5rem;
            background: transparent;
        }

        .profile-section {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 2.5rem;
            margin-bottom: 2.5rem;
            border: 1px solid rgba(102, 126, 234, 0.1);
            transition: var(--transition);
        }

        .profile-section:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-medium);
        }

        .section-title {
            color: var(--text-primary);
            font-weight: 800;
            font-size: 1.4rem;
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .section-title i {
            background: var(--primary-gradient);
            color: white;
            width: 40px;
            height: 40px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
        }

        .profile-avatar {
            width: 300px;
            height: 300px;
            border-radius: 50%;
            border: 5px solid rgba(192, 200, 35, 0.8);
            box-shadow: var(--shadow-medium);
            object-fit: cover;
            margin-bottom: 1.5rem;
            transition: var(--transition);
            background: var(--bg-white);
        }

        .profile-avatar:hover {
            transform: scale(1.25);
            box-shadow: var(--shadow-heavy);
        }

        .profile-info h2 {
            color: var(--text-primary);
            font-weight: 800;
            font-size: 2.2rem;
            margin-bottom: 1.5rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .stat-card {
            background: transparent;
            padding: 1.5rem;
            border-radius: 16px;
            box-shadow: var(--shadow-light);
            border-left: 4px solid var(--accent-color);
            transition: var(--transition);
            text-align: center;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-medium);
            border-left-color: #f5576c;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 800;
            color: var(--accent-color);
            display: block;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: var(--text-secondary);
            font-size: 0.9rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .posts-section {
            background: rgba(255, 255, 255, 0.5);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            padding: 2rem;
            margin-top: 2rem;
        }

        .post-item {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(10px);
            padding: 1.5rem;
            margin-bottom: 1rem;
            border-radius: 16px;
            box-shadow: var(--shadow-light);
            transition: var(--transition);
            border-left: 4px solid transparent;
            position: relative;
            overflow: hidden;
        }

        .post-item::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: var(--primary-gradient);
            transform: scaleY(0);
            transition: var(--transition);
        }

        .post-item:hover {
            transform: translateY(-3px);
            box-shadow: var(--shadow-medium);
            background: rgba(255, 255, 255, 0.95);
        }

        .post-item:hover::before {
            transform: scaleY(1);
        }

        .post-title {
            color: var(--text-primary);
            font-weight: 700;
            font-size: 1.1rem;
            margin-bottom: 0.8rem;
            text-decoration: none;
            display: block;
            transition: var(--transition);
        }

        .post-title:hover {
            color: var(--accent-color);
            text-decoration: none;
        }

        .post-meta {
            color: var(--text-secondary);
            font-size: 0.85rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .post-meta i {
            opacity: 0.7;
        }

        .error-messages {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 12px;
            margin-bottom: 2rem;
            box-shadow: var(--shadow-light);
            display: none;
        }

        .empty-state {
            text-align: center;
            padding: 3rem 2rem;
            color: var(--text-secondary);
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .loading-skeleton {
            background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
            background-size: 200% 100%;
            animation: loading 1.5s infinite;
            border-radius: 8px;
        }

        @keyframes loading {
            0% { background-position: 200% 0; }
            100% { background-position: -200% 0; }
        }

        @media (max-width: 768px) {
            body {
                padding: 1rem 0;
            }

            .main-container {
                padding: 0 0.5rem;
            }

            .card-header {
                padding: 2rem 1.5rem 1.5rem;
            }

            .card-header h1 {
                font-size: 2rem;
            }

            .card-body {
                padding: 1.5rem;
            }

            .profile-section {
                padding: 1.5rem;
                text-align: center;
            }

            .profile-info h2 {
                font-size: 1.8rem;
                text-align: center;
            }

            .stats-container {
                grid-template-columns: repeat(2, 1fr);
                gap: 0.8rem;
            }

            .stat-card {
                padding: 1rem;
            }

            .stat-number {
                font-size: 1.5rem;
            }

            .posts-section {
                padding: 1.5rem;
            }
        }

        @media (max-width: 480px) {
            .stats-container {
                grid-template-columns: 1fr;
            }
            
            .profile-avatar {
                width: 120px;
                height: 120px;
            }
        }

        /* Accessibility improvements */
        @media (prefers-reduced-motion: reduce) {
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }

        /* Focus states for better accessibility */
        .post-title:focus,
        .stat-card:focus {
            outline: 2px solid var(--accent-color);
            outline-offset: 2px;
        }
    </style>
</head>

<div class="card-body">
    <div class="container profile-card">
        <div class="card-header">
            <h1><i class="fas fa-user-circle me-3"></i>User Profile</h1>
        </div>

        <div class="card-body">
            <!-- Error messages section -->
            <div class="error-messages" id="errorMessages">
                <!-- Error messages will be displayed here -->
            </div>

            <!-- User Profile Information -->
            <div class="profile-section">
                <div class="section-title">
                    <i class="fas fa-id-card"></i>
                    <span>Profile Information</span>
                </div>

                <div class="row align-items-center">
                    <div class="col-md-4 text-center">
                        <!-- Profile Avatar -->
                        <% if @user.avatar.attached? %>
                        <%= image_tag(@user.avatar, class: "profile-avatar", loading:"lazy") %>
                    <% end %>
                    </div>

                    <div class="col-md-8 profile-info text-center">
                        <h2><%= @user.full_name %></h2>
                        
                        <div class="stats-container">
                            <div class="stat-card" tabindex="0">
                                <span class="stat-number"><%= pluralize(@user.views, "Profile view") %></span>
                                <div class="stat-label">Profile Views</div>
                            </div>
                            <div class="stat-card" tabindex="0">
                                <span class="stat-number"><%= pluralize(@user.posts.size, "Post") %></span>
                                <div class="stat-label">Posts</div>
                            </div>
                            <div class="stat-card" tabindex="0">
                                <span class="stat-number"><%= pluralize(@total_views, "Total Post View") %></span>
                                <div class="stat-label">Total Views</div>
                            </div>
                            <div class="stat-card" tabindex="0">
                                <span class="stat-number"><%= pluralize(@user.comments.size, "Comments") %></span>
                                <div class="stat-label">Comments</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Posts Section -->
            <div class="posts-section">
                <div class="section-title">
                    <i class="fas fa-file-alt"></i>
                    <span>Recent Posts</span>
                </div>
                
                <div class="posts-container">
                    <!-- Sample posts -->
                    <% @posts.each do |post| %>
                        <article class="post-item">
                            <h6 class="post-title"><%= link_to post.title, post %></h6>
                            <div class="post-meta">
                                <i class="fas fa-clock"></i>
                                <span><%= "#{time_ago_in_words(post.created_at)} ago" %></span>
                                <i class="fas fa-eye ms-3"></i>
                                <span><%= pluralize(post.views, "View") %></span>
                            </div>
                        </article>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
